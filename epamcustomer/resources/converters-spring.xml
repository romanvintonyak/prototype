<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="addressConverter" class="com.epam.customer.converter.EpamAddressConverter">
        <constructor-arg ref="addressPopulator"/>
    </bean>

    <bean id="addressReverseConverter" class="com.epam.customer.converter.EpamAddressReverseConverter">
        <constructor-arg ref="addressReversePopulator"/>
    </bean>

    <bean id="customerConverter" class="com.epam.customer.converter.EpamCustomerConverter">
        <constructor-arg ref="customerPopulator"/>
    </bean>

    <bean id="customerReverseConverter" class="com.epam.customer.converter.EpamCustomerReverseConverter">
        <constructor-arg ref="customerReversePopulator"/>
    </bean>

    <bean id="addressPopulator" class="com.epam.customer.converter.populator.EpamAddressPopulator"/>

    <bean id="addressReversePopulator" class="com.epam.customer.converter.populator.EpamAddressReversePopulator"/>

    <bean id="customerPopulator" class="com.epam.customer.converter.populator.EpamCustomerPopulator"/>

    <bean id="customerReversePopulator" class="com.epam.customer.converter.populator.EpamCustomerReversePopulator"/>

</beans>
