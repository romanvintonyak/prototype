<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="defaultEpamTicketFacade"
          class="com.epam.ticket.facades.impl.DefaultEpamTicketFacade">

        <property name="ticketDao" ref="epamTicketDao"/>
        <property name="ticketConverter" ref="epamTicketConverter"/>
    </bean>

    <bean id="epamTicketConverter"
          class="com.epam.ticket.converter.EpamTicketConverter">
        <property name="dateFormatter" ref="dateFormatter"/>
    </bean>

    <bean id="dateFormatter" class="java.text.SimpleDateFormat">
        <constructor-arg index="0" type="java.lang.String"
                         value="yyyy-MM-dd HH:mm:ss"/>
    </bean>

    <bean id="epamTicketDao" class="com.epam.ticket.dao.EpamTicketDAO"
          parent="abstractItemDao" scope="tenant">

    </bean>

</beans>
