<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="defaultEpamTicketFacade"
          class="com.epam.ticket.facades.impl.DefaultEpamTicketFacade">

        <constructor-arg name="ticketService" ref="epamTicketService"/>
        <constructor-arg name="ticketConverter" ref="epamTicketConverter"/>
        <constructor-arg name="sessionService" ref="sessionService" />
        <constructor-arg name="userService" ref="userService" />
    </bean>

    <bean id="epamTicketConverter" class="com.epam.ticket.converter.EpamTicketConverter">
        <constructor-arg name="epamTicketPopulator" ref="epamTicketPopulator"/>
    </bean>

    <bean id="epamTicketPopulator" class="com.epam.ticket.converter.EpamTicketPopulator">
        <constructor-arg ref="dateFormatter"/>
        <property name="ticketEventConverter" ref="epamTicketEventConverter" />
    </bean>

    <bean id="epamTicketEventConverter" class="com.epam.ticket.converter.EpamTicketEventConverter">
        <property name="populator" ref="epamTicketEventPopulator" />
    </bean>

    <bean id="epamTicketEventPopulator" class="com.epam.ticket.converter.EpamTicketEventPopulator" >
        <property name="ticketChangeEventEntryConverter" ref="epamTicketChangeEventEntryConverter" />
    </bean>

    <bean id="epamTicketEmailConverter" class="com.epam.ticket.converter.EpamTicketEmailConverter" />

    <bean id="epamTicketEmailPopulator" class="com.epam.ticket.converter.EpamTicketEmailPopulator" />

    <bean id="epamTicketChangeEventEntryConverter" class="com.epam.ticket.converter.EpamTicketChangeEventEntryConverter" />

    <bean id="epamTicketChangeEventEntryPopulator" class="com.epam.ticket.converter.EpamTicketChangeEventEntryPopulator" />

    <bean id="epamTicketService" class="com.epam.ticket.services.impl.DefaultEpamTicketService" scope="tenant">
       <property name="ticketDao" ref="epamTicketDao" />
    </bean>

    <bean id="epamTicketDao" class="com.epam.ticket.dao.EpamTicketDAO" parent="abstractItemDao" scope="tenant" >
        <property name="enumCategoryCounterStrategy" ref="defaultEnumCategoryCounterStrategy"/>
        <property name="agentCategoryCounterStrategy" ref="defaultAgentCategoryCounterStrategy"/>
    </bean>
    
    <bean id="defaultEnumCategoryCounterStrategy" class="com.epam.ticket.dao.counters.impl.DefaultEnumCategoryCounterStrategy" >
        <property name="flexibleSearchService" ref="flexibleSearchService"/>
    </bean>

    <bean id="defaultAgentCategoryCounterStrategy" class="com.epam.ticket.dao.counters.impl.DefaultAgentCategoryCounterStrategy" >
        <property name="flexibleSearchService" ref="flexibleSearchService"/>
    </bean>
    
    <bean id = "epamticketsCountAttributeHandler" class="com.epam.ticket.attributehandlers.EpamticketsCountAttributeHandler" >
        <property name="epamTicketService" ref="epamTicketService"/>
    </bean>

</beans>
